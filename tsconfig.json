{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@ports/*": [
        "./src/ports/*"
      ],
      "@adapters/*": [
        "./src/adapters/*"
      ],
      "@config/*": [
        "./src/config/*"
      ]
    },
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}